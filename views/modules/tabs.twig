<div class="tab-wrapper {{module.background}}">
	<div class="container">
		<div class="row">
			<div class="tab-container">
				<div class="tabs">
					{% set tabcount = 1 %}
						{% for tab in module.tabs %}
							<div class="tab-title {% if tabcount == 1 %}active{% endif %}" data-index="{{tabcount}}">
								<h2>{{tab.title}}</h2>
							</div>
							{% set tabcount = tabcount + 1 %}
						{% endfor %}
				</div>
				<div class="content-wrapper">
				{% set contentcount = 1 %}
					{% for tab in module.tabs %}
						<div class="content {% if contentcount == 1 %}active{% endif %}" data-index="{{contentcount}}">
							{{tab.content}}
						</div>
							{% set contentcount = contentcount + 1 %}
					{% endfor %}
				</div>
			</div>

			<ul class="accordion">
		{% for tab in module.tabs %}
					<li>
						<div class="accordion-title">
							<h3>{{tab.title}}</h3>
							<span class="icon"></span>
						</div>
						<div class="accordion-content">
							{{tab.content}}
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
